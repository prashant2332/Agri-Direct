<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardElevation="12dp"
    card_view:cardCornerRadius="20dp"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                card_view:cardCornerRadius="5dp">

                <ImageView

                    android:id="@+id/tvCartProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_rounded_background"
                    android:contentDescription="Product Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/noimageavailable" />
            </androidx.cardview.widget.CardView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Product Name"
                android:textColor="@color/productnamecolor"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartVariety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Variety"
                android:textColor="#0A2E2E"
                android:textSize="14sp"
                android:typeface="sans" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Quantity"
                android:textColor="@color/productvarietycolor"
                android:textSize="14sp"
                android:typeface="sans" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Unit"
                android:textColor="@color/productvarietycolor"
                android:textSize="14sp"
                android:typeface="sans" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_regular"
                android:text="₹0"
                android:textColor="@color/productnamecolor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/currenthishestbid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Current Bid: ₹0"
                android:textColor="@color/currentbidcolor"
                android:textSize="14sp"
                android:typeface="sans" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bidstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Bid Status: Active"
                android:textColor="@color/bidstatuscolor"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/eligibleforcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Auction Result: N/A"
                android:textColor="#3D0585"
                android:textSize="14sp"
                android:typeface="sans" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/removefrombidbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button_tint_selector"
                android:elevation="20dp"
                app:cornerRadius="7dp"
                android:textSize="12sp"
                android:enabled="false"
                android:fontFamily="@font/poppins_regular"
                android:text="Remove from Bids"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:typeface="sans" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/transactionComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/button_tint_selector"
                android:elevation="20dp"
                app:cornerRadius="7dp"
                android:textSize="12sp"
                android:enabled="false"
                android:visibility="gone"
                android:fontFamily="@font/poppins_regular"
                android:text="Successful Transaction"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:typeface="sans" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/transactionnotComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/button_tint_selector"
                android:elevation="20dp"
                app:cornerRadius="7dp"
                android:textSize="12sp"
                android:enabled="false"
                android:fontFamily="@font/poppins_regular"
                android:text="Canceled Transaction"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:typeface="sans" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
