<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:elevation="12dp"
    app:cardCornerRadius="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="#DFE1E3"
       >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/commodity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="Commodity"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/marketheading"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Market"
                    android:textColor="@color/buttoncolor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/market"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Market"
                    android:textColor="@color/buttoncolor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detailshead"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="State(dist.)"
                    android:textColor="#079191"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/details"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Details"
                    android:textColor="#079191"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/minpricehead"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="Min.Price"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/minprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Min.Price"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/maxpricehead"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="Max.Price"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/maxprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Max.Price"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/avgpricehead"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="Avg.Price"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/avgprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Avg.Price"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/datehead"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Date"
                    android:textColor="@color/buttoncolor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:paddingStart="10dp"
                    android:text="Date"
                    android:textColor="@color/buttoncolor"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
